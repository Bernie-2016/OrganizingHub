block vars

doctype html
html
  head
    title Bernie 2016 Organizing Hub
    link(href='production.min.css' rel='stylesheet')
  body
    nav.top-bar(data-topbar)
      ul.title-area
        li.name
          h1
            a(href='/')
              img.logo(src='img/logo.png' alt='Bernie 2016')

        li.toggle-topbar.menu-icon
          a(href='#')
            span Menu

      section.top-bar-section
        ul.title
          li
            h1= title

        ul.right
          li.divider
          li.has-dropdown
            a(href='#') Organize
            ul.dropdown
              li
                a(href='/connect.html') Connect
              li
                a(href='/teams.html') Teams
              li
                a(href='/events.html') Events

    block content

    script(src='production.min.js')