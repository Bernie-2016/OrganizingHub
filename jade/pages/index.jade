extend ../layout.jade

block vars
  - var title = 'Organizing Hub'

mixin pane(title, url, img)
  div.large-4.medium-6.small-12.columns
    a.pane(href=url)
      h1= title
      img(src=img alt=title)

block content
  div.row
    + pane('Connect with Bernie', '/connect.html', 'img/connect.png')
    + pane('Bernie Teams', '/teams.html', 'img/teams.png')
    + pane('Bernie Events', '/events.html', 'img/events.png')